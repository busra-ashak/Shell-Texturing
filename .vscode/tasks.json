  "version": "2.0.0",
  "tasks": [
    {
		"label": "shell_debug",
		"type": "shell",
		"command": "ninja shell",
		"options":
		{
			"cwd": "${workspaceFolder}/build/debug"
		},
		"group": {
			"kind": "build",
			"isDefault": true
      }
    },
    {
		"label": "shell_release",
		"type": "shell",
		"command": "ninja shell",
		"options":
		{
			"cwd": "${workspaceFolder}/build/release"
		},
		"group": {
			"kind": "build",
			"isDefault": true
      }
    },
  ]
}